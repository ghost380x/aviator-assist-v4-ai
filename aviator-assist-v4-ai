#!/bin/bash
# ðŸš€ Aviator Assist v4 AI - Build em 1 comando

echo "ðŸš€ Iniciando build do Aviator Assist v4 AI..."

# Instalar ferramentas
npm install -g @expo/cli eas-cli

# Ir para pasta mobile  
cd apps/mobile

# Criar package.json
cat > package.json << 'EOF'
{
  "name": "aviator-assist-v4-ai",
  "version": "4.0.0",
  "main": "expo-router/entry",
  "dependencies": {
    "expo": "~49.0.15",
    "expo-router": "^2.0.0", 
    "expo-status-bar": "~1.6.0",
    "lucide-react-native": "^0.263.1",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-safe-area-context": "4.6.3"
  }
}
EOF

# Criar app.json
cat > app.json << 'EOF'
{
  "expo": {
    "name": "Aviator Assist v4 AI",
    "slug": "aviator-assist-v4-ai", 
    "version": "4.0.0",
    "android": {
      "package": "com.aviator.assistv4ai"
    }
  }
}
EOF

# Instalar e fazer build
npm install
npx create-expo-app --template blank-typescript .
eas build --platform android

echo "âœ… APK pronto! Baixe em: https://expo.dev"
